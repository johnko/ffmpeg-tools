#!/bin/sh

/usr/bin/find /tank/data/beet -exec chown urep {} \;

/usr/bin/find /tank/data/ffall -type f -exec chmod a+r {} \;
/usr/bin/find /tank/data/ffall -type d -exec chmod a+rx {} \;

/usr/bin/find /tank/data/ffallytdl -type f -exec chmod a+r {} \;
/usr/bin/find /tank/data/ffallytdl -type d -exec chmod a+rx {} \;

/usr/bin/find /tank/data/movies -type f -exec chmod a+r {} \;
/usr/bin/find /tank/data/movies -type d -exec chmod a+rx {} \;

/usr/bin/find /tank/data/music -type f -exec chmod a+r {} \;
/usr/bin/find /tank/data/music -type d -exec chmod a+rx {} \;

/usr/bin/find /tank/data/photos -type f -exec chmod a+r {} \;
/usr/bin/find /tank/data/photos -type d -exec chmod a+rx {} \;
