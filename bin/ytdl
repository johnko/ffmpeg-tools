#!/bin/sh

install -d -m 755 -o urep /vault/data/ff/_1srcytdl

chown -R urep /vault/data/ff/_1srcytdl

su -l urep -c "youtube-dl \
--no-playlist --restrict-filenames -w --no-continue \
--write-description --write-info-json -k \
--no-cache-dir \
-o '/vault/data/ff/_1srcytdl/%(uploader)s-%(title)s-%(id)s.%(ext)s' \
'${1}'"
