# Script version is yymmdd-HHMMSS in UTC, date -u +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=150725-061531

install -d -m 755 -o urep /tank/dlna/ffallytdl

chown -R urep /tank/dlna/ffallytdl

su -l urep -c "youtube-dl \
--no-playlist --restrict-filenames -w --no-continue \
--write-description --write-info-json \
--no-cache-dir \
-o '/tank/dlna/ffallytdl/%(uploader)s-%(title)s-%(id)s.%(ext)s' \
'${1}'"
