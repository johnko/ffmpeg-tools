#!/bin/sh

install -d -m 755 -o urep /priv/data/ffallytdl

chown -R urep /priv/data/ffallytdl

su -l urep -c "youtube-dl \
--no-playlist --restrict-filenames -w --no-continue \
--write-description --write-info-json -k \
--no-cache-dir \
-o '/priv/data/ffallytdl/%(uploader)s-%(title)s-%(id)s.%(ext)s' \
'${1}'"
